{
  "name": "didfuel",
  "version": "0.0.1",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/**"
  ],
  "scripts": {
    "prepare": "husky install",
    "dev": "run-p dev:*",
    "dev:app": "yarn workspace @didfuel/app dev",
    "build": "run-p build:*",
    "build:app": "yarn workspace @didfuel/app build",
    "lint": "run-p lint:*",
    "lint:app": "yarn workspace @didfuel/app lint",
    "run-local-fuel": "fuel-core run --db-type in-memory --chain ./chainConfig.json",
    "deploy-to-local-fuel": "cd packages/contract && forc deploy --unsigned",
    "typegen-from-contract-to-app": "npx fuels typegen -i ./packages/contract/out/debug/game-abi.json -o ./packages/app/src/types/generated/fuel"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --cache --fix",
    "*.--write": "prettier --write"
  }
}
